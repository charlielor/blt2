{% extends 'base.html.twig' %}

{% block userActions %}
    <li><a href="/" tabindex="-1">Back to Menu</a></li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    'css/maintenance.less' filter='cssrewrite' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block body %}
    {{ parent() }}
    <div id="queryDatabaseErrorModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="queryDatabase">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="queryDatabaseErrorTitle">Error</h4>
                </div>
                <div class="modal-body">
                    <p class="text-danger center-block text-center">Error in querying the database</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <div id="emptyStringModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="emptyString">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="emptyStringErrorTitle">Error</h4>
                </div>
                <div class="modal-body">
                    <p class="text-danger center-block text-center">Search parameter can not be empty</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <div id="emptySetModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="emptySet">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="emptySetTitle">Empty set</h4>
                </div>
                <div class="modal-body">
                    <p class="center-block text-center">No results found</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="packageBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Package</strong> - Searchable textbox of Packages</p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-8">
                    <input type="text" id="searchPackageText" class="form-control" placeholder="Tracking Number" />
                </div>
                <div class="col-xs-4">
                    <button type="button" id="searchPackageButton" class="btn btn-default">Search</button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% image 'images/spinner.gif' %}
                    <img src="{{ asset_url }}" id="spinnerPackage" class="center-block"/>
                    {% endimage %}
                </div>
            </div>
            <div class="row">
                <div id="searchPackageTableDiv" class="col-md-12">
                    <table id="searchPackageTable" class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Tracking Number</th>
                            <th>Vendor</th>
                            <th>Shipper</th>
                            <th>Receiver</th>
                            <th>Number of Packages</th>
                            <th>User (who received)</th>
                            <th>Packing Slip</th>
                            <th>Date Received</th>
                            <th>Date Delivered</th>
                            <th>User (who delivered)</th>
                            <th>Date Picked Up</th>
                            <th>User of Who Picked Up</th>
                        </tr>
                        </thead>
                        <tbody id="searchPackageTableBody">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="shipperBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Shipper</strong> - List of Shippers</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Shipper ID</th>
                            <th>Shipper's Name</th>
                            <th colspan="2">Available Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for shipper in shippers %}
                            <tr>
                                <td>
                                    {{ shipper.getId() }}
                                </td>
                                <td>
                                    {{ shipper.getName() }}
                                </td>
                                <td>
                                    {% if shipper.getEnabled() == 1 %}
                                        <button type="button" id="{{ shipper.getId() }}" class="shipper btn btn-sm btn-danger">Disable</button>
                                    {% else %}
                                        <button type="button" id="{{ shipper.getId() }}" class="shipper btn btn-sm btn-success">Enable</button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="vendorBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Vendor</strong> - Searchable textbox of Vendors</p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-8">
                    <input type="text" id="searchVendorText" class="form-control" placeholder="Vendor Name" />
                </div>

                <div class="col-xs-4">
                    <button type="button" id="searchVendorButton" class="btn btn-default">Search</button>
                </div>
            </div>

            <div class="row">
                <div id="searchVendorTableDiv" class="col-md-12">
                    <table id="searchVendorTable" class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Vendor ID</th>
                            <th>Vendor's Name</th>
                            <th colspan="2">Available Actions</th>
                        </tr>
                        </thead>
                        <tbody id="searchVendorTableBody">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <hr />

        <div class="receiverBlock">
            <div class="row">
                <div class="col-md-12">
                    <p class="control-label"><strong>Receiver</strong> - List of Receivers</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>Receiver ID</th>
                            <th>Receiver's Name</th>
                            <th>Receiver's Room Number</th>
                            <th colspan="2">Available Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for receiver in receivers %}
                            <tr>
                                <td>
                                    {{ receiver.getId() }}
                                </td>
                                <td>
                                    {{ receiver.getName() }}
                                </td>
                                <td>
                                    {{ receiver.getDeliveryRoom() }}
                                </td>
                                <td>
                                    {% if receiver.getEnabled() == 1 %}
                                        <button type="button" id="{{ receiver.getId() }}" class="receiver btn btn-sm btn-danger">Disable</button>
                                    {% else %}
                                        <button type="button" id="{{ receiver.getId() }}" class="receiver btn btn-sm btn-success">Enable</button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    'js/maintenance.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}